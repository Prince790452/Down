          <select id="manualSubjects" multiple class="mt-1 w-full border rounded-lg px-3 py-2 h-32"></select>
        </label>
        <div class="flex items-end">
          <button id="addToPlan" class="px-5 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 w-full transition-colors">
            <i class="fas fa-plus mr-2"></i>Add to Plan
          </button>
        </div>
      </div>
      <div class="text-right no-print">
        <button id="printBtn" class="px-5 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
          <i class="fas fa-print mr-2"></i>Print / Save PDF
        </button>
        <button id="clearPlanBtn" class="px-5 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors ml-2">
